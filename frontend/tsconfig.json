{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@valtimo-plugins/berkelybridge": ["dist/valtimo-plugins/berkelybridge"]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./src/tsconfig.app.json"
    }
  ]
}
